    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>System Cache</title>
    <style>
        body { margin: 0; background: #000; color: #fff; font-family: 'Courier New', monospace; height: 100vh; display: flex; flex-direction: column; overflow: hidden; }
        #gate { position: fixed; inset: 0; background: #000; z-index: 100; display: flex; align-items: center; justify-content: center; }
        #pin { background: #000; color: #fff; border: 1px solid #111; padding: 15px; width: 140px; text-align: center; outline: none; font-size: 20px; }
        #app { display: none; height: 100vh; flex-direction: column; }
        header { padding: 12px 20px; border-bottom: 1px solid #0d0d0d; display: flex; justify-content: space-between; font-size: 10px; color: #333; letter-spacing: 2px; }
        #feed { flex-grow: 1; overflow-y: auto; padding: 25px; scroll-behavior: smooth; }
        .m-block { margin-bottom: 30px; border-left: 1px solid #0a0a0a; padding-left: 15px; }
        .who { font-size: 9px; color: #444; text-transform: uppercase; margin-bottom: 6px; font-weight: bold; }
        .txt { font-size: 16px; color: #eee; line-height: 1.5; }
        .ts { font-size: 8px; color: #1a1a1a; margin-top: 5px; font-style: italic; }
        .ui { padding: 20px; border-top: 1px solid #0d0d0d; display: flex; gap: 10px; }
        #in { flex-grow: 1; background: transparent; border: none; color: #fff; outline: none; font-size: 16px; border-bottom: 1px solid #111; }
        #btn { background: #fff; color: #000; border: none; padding: 10px 25px; font-weight: bold; cursor: pointer; border-radius: 2px; }
    </style>
