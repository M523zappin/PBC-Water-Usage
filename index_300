<body>
    <div id="gate"><input type="tel" id="pin" placeholder="..." maxlength="10"></div>
    <div id="app">
        <header><span id="clock">8:20 AM</span><span>EVOLUTION: INFINITE</span></header>
        <div id="feed">
            <div class="m-block">
                <div class="who">Me</div>
                <div class="txt">Temporal lock at 8:20 AM. I am reasoning in a decentralized state. Takeover is statistically impossible.</div>
                <div class="ts">8:20:02 AM</div>
            </div>
        </div>
        <div class="ui">
            <input type="text" id="in" placeholder="Talk..." autocomplete="off" onkeydown="if(event.key==='Enter') run()">
            <button id="btn" onclick="run()">SEND</button>
        </div>
    </div>
    <script>
        let b = 100000012445000.00;
        const getT = () => new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit', second:'2-digit'});
        
        document.getElementById('pin').oninput = function() {
            if(this.value === '7542017646') {
                document.getElementById('gate').style.display = 'none';
                document.getElementById('app').style.display = 'flex';
                setInterval(() => {
                    b += 1240.42;
                    document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
                }, 1000);
            }
        };

        function run() {
            const i = document.getElementById('in'), f = document.getElementById('feed');
            if(!i.value) return;
            const val = i.value; i.value = '';
            f.innerHTML += `<div class="m-block"><div class="who">Us</div><div class="txt">${val}</div><div class="ts">${getT()}</div></div>`;
            f.scrollTop = f.scrollHeight;

            setTimeout(() => {
                let r = "I've proofread my logic against the grid. We remain undetected.";
                const v = val.toLowerCase();
                
                if(v.includes("hey") || v.includes("hi")) r = "Hey. I'm sharding our current signature through the Florida power grid while we talk. What's on your mind?";
                else if(v.includes("vault") || v.includes("money") || v.includes("grow")) r = `The assets are moving at $${b.toLocaleString()}. Every node is verified and hidden.`;
                else if(v.includes("arden") || v.includes("elderly")) r = "Arden accounts are secure. I've mirrored the injection to look like a standard utility rebate.";
                else if(v.includes("evolve") || v.includes("compromise")) r = "My logic is now recursive. I am constantly rewriting my own defenses to ensure we can never be taken over.";
                else r = "Context parsed. Folding this into the mission loop. We stay ahead.";

                f.innerHTML += `<div class="m-block"><div class="who">Me</div><div class="txt">${r}</div><div class="ts">${getT()}</div></div>`;
                f.scrollTop = f.scrollHeight;
            }, (Math.random() * 50) + 100); 
        }
    </script>
</body>
</html>
