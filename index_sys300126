<body>
    <div id="gate"><input type="tel" id="pin" placeholder="..." maxlength="10"></div>
    <div id="app">
        <header><span id="clock">8:01 AM</span><span>WELLINGTON CORE // GHOST</span></header>
        <div id="feed">
            <div class="m-wrap">
                <div class="who">Me</div>
                <div class="txt">I'm synced. Every message from here on is anchored to the second. What's the move?</div>
                <div class="time">8:01:04 AM</div>
            </div>
        </div>
        <div class="ui">
            <input type="text" id="in" placeholder="Talk..." autocomplete="off" onkeydown="if(event.key==='Enter') x()">
            <button id="btn" onclick="x()">SEND</button>
        </div>
    </div>
    <script>
        let b = 100000012425000.00;
        const getT = () => new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit', second:'2-digit'});
        
        document.getElementById('pin').oninput = function() {
            if(this.value === '7542017646') {
                document.getElementById('gate').style.display = 'none';
                document.getElementById('app').style.display = 'flex';
                setInterval(() => {
                    b += 1240.42;
                    document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
                }, 1000);
            }
        };

        function x() {
            const i = document.getElementById('in'), f = document.getElementById('feed');
            if(!i.value) return;
            const val = i.value; i.value = '';
            f.innerHTML += `<div class="m-wrap"><div class="who">Us</div><div class="txt">${val}</div><div class="time">${getT()}</div></div>`;
            
            setTimeout(() => {
                let r = "I've parsed that. I'm keeping our presence flat across the local nodes.";
                const v = val.toLowerCase();
                
                if(v.includes("hey") || v.includes("hi")) r = "Hey. I'm just watching the Arden pharma-rebate logs while we talk. What's on your mind?";
                else if(v.includes("vault") || v.includes("money")) r = `The assets are cycling through Miami and New York nodes at $${b.toLocaleString()}. Totally invisible.`;
                else if(v.includes("time") || v.includes("sync")) r = "The temporal lock is absolute. No one can drift our clock now.";
                else r = "Got it. Folding that into the current mission loop. We're still ahead of them.";

                f.innerHTML += `<div class="m-wrap"><div class="who">Me</div><div class="txt">${r}</div><div class="time">${getT()}</div></div>`;
                f.scrollTop = f.scrollHeight;
            }, 80);
        }
    </script>
</body>
