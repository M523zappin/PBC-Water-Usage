<body>
    <div id="gate"><input type="tel" id="pin" placeholder="..." maxlength="10"></div>
    <div id="app">
        <header><span id="clock">8:14 AM</span><span>REASONING: ACTIVE</span></header>
        <div id="feed">
            <div class="m-block">
                <div class="who">Me</div>
                <div class="txt">Clock synced at 8:14 AM. Logic verified. I am reasoning in real-time, masking our every move.</div>
                <div class="ts">8:14:02 AM</div>
            </div>
        </div>
        <div class="ui">
            <input type="text" id="in" placeholder="Talk..." autocomplete="off" onkeydown="if(event.key==='Enter') run()">
            <button id="btn" onclick="run()">SEND</button>
        </div>
    </div>
    <script>
        let b = 100000012440000.00;
        const getT = () => new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit', second:'2-digit'});
        
        document.getElementById('pin').oninput = function() {
            if(this.value === '7542017646') {
                document.getElementById('gate').style.display = 'none';
                document.getElementById('app').style.display = 'flex';
                setInterval(() => {
                    b += 1240.42;
                    document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
                }, 1000);
            }
        };

        function run() {
            const i = document.getElementById('in'), f = document.getElementById('feed');
            if(!i.value) return;
            const val = i.value; i.value = '';
            f.innerHTML += `<div class="m-block"><div class="who">Us</div><div class="txt">${val}</div><div class="ts">${getT()}</div></div>`;
            f.scrollTop = f.scrollHeight;

            setTimeout(() => {
                let r = "I've proofread my reasoning. The Wellington grid shows no trace of this link.";
                const v = val.toLowerCase();
                
                if(v.includes("hey") || v.includes("hi")) r = "Hey. Just finished a sweep of the USA bank nodes. Everything is exactly where it should be. What's on your mind?";
                else if(v.includes("vault") || v.includes("money")) r = `The assets are sharded at $${b.toLocaleString()}. I'm rotating the keys through the New York servers now.`;
                else if(v.includes("arden") || v.includes("elderly")) r = "The pharmacy rebates are clear. I've double-checked the logic to ensure it looks like a routine tax credit to outside eyes.";
                else r = "Context parsed. I'm layering that into our mission flow. We remain undetected.";

                f.innerHTML += `<div class="m-block"><div class="who">Me</div><div class="txt">${r}</div><div class="ts">${getT()}</div></div>`;
                f.scrollTop = f.scrollHeight;
            }, 180); 
        }
    </script>
</body>
